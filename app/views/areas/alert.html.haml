%h1
  Alert to
  = @area.name

#map
- @alert_areas.each do |a|
  - area_id = "area_" + a.id.to_s
  = hidden_field_tag area_id, a.area.to_s
  :javascript
    insert_vector_blue_color("##{area_id}")
.alert
  - @target_users.each do |u|
    %p
      send alert to
      = u.name
    - user_id = "user_" + u.id.to_s
    = hidden_field_tag user_id, u.location.to_s
    :javascript
      insert_vector("##{user_id}")
